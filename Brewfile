# Brewfile for MacHelix

# Rust toolchain (if not already installed)
brew "rustup-init"

# Build tools
brew "cmake"
brew "pkg-config"
brew "ninja"

# Required libraries
brew "fontconfig"
brew "freetype"
brew "harfbuzz"

# Development tools
brew "just"  # Command runner for development tasks
brew "cargo-watch"  # For development workflow
brew "cargo-bundle"  # For creating macOS app bundles

# Helix dependencies
brew "helix"  # For runtime files and language support

# Optional dependencies
brew "tree-sitter"  # For syntax highlighting

# macOS app signing tools
brew "create-dmg"  # For creating distributable DMGs